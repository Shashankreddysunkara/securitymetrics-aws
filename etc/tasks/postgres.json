[
  {
    "name": "postgres",
    "image": "postgres:9.6-alpine",
    "memoryReservation": 256,
    "cpu": 0,
    "essential": true,
    "environment": [
      {
        "name": "POSTGRES_DB",
        "value": "${postgres_db}"
      },
      {
        "name": "POSTGRES_USER",
        "value": "${postgres_user}"
      }
    ],
    "mountPoints": [
      {
        "containerPath": "/var/lib/postgresql/data",
        "sourceVolume": "postgres_data"
      }
    ],
    "user": "postgres",
    "portMappings": [
      {
        "hostPort": 5432,
        "containerPort": 5432,
        "protocol": "tcp"
      }
    ],
    "secrets": [
      {
        "name": "POSTGRES_PASSWORD",
        "valueFrom": "${secrets.postgres_password}"
      }
    ]
  }
]
