{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Action": "ssm:GetParameters",
      "Effect": "Allow",
      "Resource": [
        %{ for secret in keys(secrets) ~}
        "${secrets[secret].arn}"%{ if index(keys(secrets), secret) + 1 < length(secrets) }, %{ endif }
        %{ endfor ~}        
      ]
    }
  ]
}
